<% if image %> 
  <%= image_tag image.attachment.url(:product), :itemprop => "image" %>
<% else %>
	<% if @product.images.first %>
		<%= link_to product_image(@product, :itemprop => "image"), @product.images.first.attachment.url(:large), :class => 'jqzoom' %>
	<% else %>
		<%= product_image(@product, :itemprop => "image") %>
	<% end %>
<% end %>
