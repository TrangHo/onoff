<% if image %> 
  <%= image_tag image.attachment.url(:product), :itemprop => "image" %>
<% else %>
	<% if @product.cover_image %>
		<%= link_to image_tag(@product.cover_image.attachment.url(:product)), @product.images.first.attachment.url(:large), :class => 'jqzoom' %>
	<% else %>
		<%= product_image(@product, :itemprop => "image") %>
	<% end %>
<% end %>
