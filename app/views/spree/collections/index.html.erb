<% content_for :full_width_slide do %>
  <div id="collections-nav">
    <ul>
      <li>
        <%= link_to image_tag('collections/collection-1.jpg', :class => 'img-nav'), onoff_collections_path('Thể-thao') %>
      </li>
      <li>
        <%= link_to image_tag('collections/collection-2.jpg', :class => 'img-nav'), onoff_collections_path('Năng-động') %>
      </li>
      <li>
        <%= link_to image_tag('collections/collection-3.jpg', :class => 'img-nav'), onoff_collections_path('Công-sở') %>
      </li>
      <li>
        <%= link_to image_tag('collections/collection-4.jpg', :class => 'img-nav'), onoff_collections_path('Golf') %>
      </li>
    </ul>
  </div>
<% end %>

<div id="wrapper" class="row" data-hook>
  <div id='breadcrumb'><%= breadcrumb @taxon.name %></div>

  <%
    paginated_products ||= @products
  %>
  <% if @taxon.products.blank? %>
    <div class='no-product-found'><%= t(:no_products_found_collections) %></div>
  <% end %>

  <div id='feature-products'>
    <ul>
      <% @featured_products.each do |product| %>
        <%= render :partial => 'spree/products/featured_product', :locals => { :product => product } %>
      <% end %>
    </ul>
  </div>

  <div id='product-list'>
    <ul>
      <% @taxon.products.each do |product| %>
        <%= render :partial => 'spree/products/product', :locals => { :product => product } %>
      <% end %>
    </ul>
  </div>

  <div class='clear'></div>

  <% if paginated_products.respond_to?(:num_pages) %>
    <%= paginate paginated_products %>
  <% end %>
</div>